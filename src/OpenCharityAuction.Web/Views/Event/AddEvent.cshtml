@model AddEventViewModel

@{ 
    ViewData["Title"] = "Add Event";
}

<h2>@ViewData["Title"]</h2>
<form asp-controller="Event" asp-action="AddEvent" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="EventName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control hasDatePicker" asp-for="EventName" />
            <span asp-validation-for="EventName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="EventDate" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="EventDate" />
            <span asp-validation-for="EventDate" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" />
    </div>
</form>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}