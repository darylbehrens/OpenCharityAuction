@{
    ViewData["Title"] = "Select Current Event";
}

<h2>@ViewData["Title"]</h2>
<h4>@ViewData["Error"]</h4>

<div ng-app="search" ng-controller="EventSearchController" ng-cloak>
    <hr />
    <div class="row">
        <div class="col-md-1"><h4>Search</h4></div>
        <div class="col-md-1"><input type="text" ng-model="query" /></div>
    </div>
    <table class="table table-striped table-bordered eventtable">
        <thead>
            <tr>
                <th ng-cloak>Name</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in items | filter:query">
                <td>{{item.eventName}}</td>
                <td>{{item.eventDate}}</td>
                <td><a href="/Event/EditEvent/{{item.id}}">Edit</a></td>
            </tr>
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/scripts/angular/search/search.js" type="text/javascript"></script>
}