@model AddEventViewModel

<div class="form-group">
    <label asp-for="EventName" class="col-sm-2 control-label"></label>
    <div class="col-sm-10">
        <input type="text" class="form-control hasDatePicker" asp-for="EventName" />
        <span asp-validation-for="EventName" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="EventDate" class="col-sm-2 control-label"></label>
    <div class="col-sm-10">
        <input type="text" class="form-control" asp-for="EventDate" />
        <span asp-validation-for="EventDate" class="text-danger"></span>
    </div>
</div>